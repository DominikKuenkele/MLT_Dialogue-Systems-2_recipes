<?xml version="1.0" encoding="utf-8"?>
<grammar>

  <action name="top">
    <one-of>
      <item>main menu</item>
      <item>top</item>
      <item>beginning</item>
      <item>cancel</item>
      <item>forget it</item>
      <item>never mind</item>
      <item>abort</item>
    </one-of>
  </action>

  <action name="up">
    <one-of>
      <item>up</item>
      <item>back</item>
      <item>go back</item>
    </one-of>
  </action>

  <question speaker="user" type="wh_question" predicate="amount_ingredient">
    <one-of>
      <item>How much <slot predicate="which_ingredient"/> should I use</item>
      <item>How many <slot predicate="which_ingredient"/></item>
      <item>How much</item>
      <item>A lot</item>
      <item>What is the amount</item>
    </one-of>
  </question>

  <question speaker="system" predicate="which_ingredient">Of what?</question>

  <answer speaker="system" predicate="amount_ingredient"><slot predicate="amount_ingredient"/> is fine</answer>

&generated
</grammar>
